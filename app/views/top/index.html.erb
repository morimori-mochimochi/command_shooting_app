<h1> <%= image_tag("command_sniper_logo.png", alt: "タイトルロゴ", class: "title-logo mt-10") %></h1>
<div class="button-group">
  <% if user_signed_in? %>
    <p class="size-body"> ようこそ、<%= current_user.nickname %> さん！</p>
    <%= link_to image_tag("hayauchi_button.png", alt:"早打ち"), standby_path, data: { turbo: false} %>
    <%= link_to image_tag("logout-button.png", alt: "ログアウト"), destroy_user_session_path, method: :delete, data: { turbo: false} %>
  <% else %>
    <%= link_to image_tag("hayauchi_button.png", alt:"早打ち"), standby_path, data: { turbo: false} %>
    <%= link_to image_tag("login_button.png", alt: "ログイン", class: "size-button"),new_user_session_path, data: { turbo: false } %>
  <% end %>
</div>
